<html>
    <body>
        <%- include('header'); -%>
        <h2>Display Page</h2>
        <% if(user_array.length>0) { %>
            <table border="1" align="center">
                <tr>
                    <th>ID</th>
                    <th>Name</th>                   
                    <th>DOB</th>
                    <th>Gender</th>
                    <th>Mobile</th>
                    <th>E_Mail</th>
                    <th>Password</th>
                    <th>Is_Admin</th>
                    <th>Join_Date</th>
                    <th>Img</th>
                    <th>Action</th>
                </tr>
                <% for(var i=0; i<user_array.length; i++) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td><%= user_array[i].user_name %></td>
                        <td><%= user_array[i].user_dob %></td>
                        <td><%= user_array[i].user_gender %></td>
                        <td><%= user_array[i].user_mobile %></td>
                        <td><%= user_array[i].user_email %></td>
                        <td><%= user_array[i].user_password %></td>
                        <td><%= user_array[i].user_isadmin %></td>
                        <td><%= user_array[i].user_joindate %></td>
                        <td>
                            <img src="/Upload/<%= user_array[i].user_image %>" width="100"/>
                        </td>
                        <td>
                            <a href="/delete/<%= user_array[i]._id %>">delete</a>
                            <a href="/show/<%= user_array[i]._id %>">show</a>
                        </td>
                    </tr>
                    <% } %>
            </table>
            <% } else { %>
                No Record Found
                <% } %>
    </body>
</html>